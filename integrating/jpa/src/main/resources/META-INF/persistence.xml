<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

  <persistence-unit name="beanvalidationPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>org.agoncal.fascicle.beanvalidation.integrating.jpa.Book</class>
    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="jakarta.persistence.schema-generation.scripts.action" value="drop-and-create"/>
      <property name="jakarta.persistence.schema-generation.scripts.create-target" value="beanvalidationPUCreate.ddl"/>
      <property name="jakarta.persistence.schema-generation.scripts.drop-target" value="beanvalidationPUDrop.ddl"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:beanvalidationDB;DB_CLOSE_DELAY=-1"/>
      <property name="jakarta.persistence.jdbc.user" value="sa"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
